<p class="lead">
  Join us at
  {% for campus in Campuses %}
  <b>
    <a href="~/location?{{ campus.Id }}">{{ campus.Name }}</a>
  </b> at {{ campus.Location.Street1 }}{% if forloop.length > 1 and forloop.last == 'false' %} or{% endif %}
  {% endfor %}
  {% assign firstCampus = Campuses | First %}
  {% for time in firstCampus.ServiceTimes limit:1 %}
  on {{ time.Day }} at {{ time.Time }}{% endfor %}</p>